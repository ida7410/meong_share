	<select id="selectLatestThreeProductList" resultType="com.ms.product.domain.Product">
		SELECT
			`id`
			,`ownerId`
			,`buyerId`
			,`name`
			,`company`
			,`price`
			,`imagePath`
			,`description`
			,`boughtDate`
			,`completed`
			,`createdAt`
		FROM
			`product`
		WHERE
			`completed` = false
		ORDER BY `id` DESC
		LIMIT 3
	</select>
	
	<select id="selectProductListByCompleted" parameterType="boolean" resultType="com.ms.product.domain.Product">
		SELECT
			`id`
			,`ownerId`
			,`buyerId`
			,`name`
			,`company`
			,`price`
			,`imagePath`
			,`description`
			,`boughtDate`
			,`completed`
			,`createdAt`
		FROM
			`product`
		WHERE
			`completed` = #{completed}
	</select>
	
	<update id="updateProductCopmletedByProductId" parameterType="int">
		UPDATE
			`product`
		SET
			`buyerId` = #{buyerId}
			,`completed` = true
		WHERE
			`id` = #{productId}
	</update>
